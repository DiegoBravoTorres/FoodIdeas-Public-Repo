

<div class="shopping-cart-body">
   <h1>Shopping Cart</h1>
   {{#if hasMeals}}
   {{meals.count}}
   <div class="container">
      <div class="row card-body text-left">
         <div class="col-lg-3 col-sm-1">

         </div>
         <div class="col-5 shopping-cart-center">
            <p>Name</p>
         </div>
         <div class="col-lg-2 col-3 shopping-cart-center">
            <p>Price</p>
         </div>
         <div class="col-2 shopping-cart-center">
            <p>Qty</p>
         </div>
      </div>
   </div>
   {{#each meals}}
   <div class="container shopping-cart-meal">
      <div class="row card-body text-left">
         <div class="col-lg-3 col-sm-1">
            <img src="/images/meals/{{meal.imgURL}}" alt="{{title}}">
         </div>
         <div class="col-5 shopping-cart-center">
            <h5 class="card-title">{{meal.title}}</h5>
         </div>
         <div class="col-lg-2 col-3 shopping-cart-center">
            <h5 class="card-title"><strong>${{meal.price}}</strong></h5>
         </div>
         <div class="col-lg-1 col-2 shopping-cart-center">
            <h5 class="card-title"><strong>{{qty}}</strong></h5>
         </div>
         <div class="col-1 shopping-cart-center">
            <button type="button" class="btn btn-secondary" onclick="location.href='/customer/remove-meal/{{id}}';">
               <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"></path>
                  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"></path>
               </svg>
            </button>
         </div>
      </div>
   </div>
   {{/each}}
   <p></p>
   <div class="container shopping-cart-meal">
      <div class="row card-body text-left" style="align-items: baseline;">
         <div class="col-lg-3 col-sm-1 shopping-cart-center">
         </div>
         <div class="col-5 shopping-cart-center">
            <h5 style="text-align: right;">
            Order Total:</p>
         </div>
         <div class="col-lg-2 col-3 shopping-cart-center">
            <h5>
            <strong> {{cartTotal}}</strong></p>
         </div>
         <div class="col-2 shopping-cart-center">
            <button onclick="location.href='/check-out';" class="btn btn btn-primary btn-block" type="submit" >Checkout</button>
         </div>
      </div>
   </div>
   {{else}}
   <p>Your shopping cart is empty, please go to our  <a href="/on-the-menu">menu</a> to start shopping</p>
   {{/if}}
</div>

