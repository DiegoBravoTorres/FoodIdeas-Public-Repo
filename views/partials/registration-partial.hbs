  <body class="text-center">
    <div class="body-form">
    <form  method="post" action="/registration" class="form-signin">
     
      <h1 class="h3 mb-5 font-weight-normal">Sign up</h1>

      {{#if errorMessages.firstName}}
        <span class="error">{{errorMessages.firstName}}</span>
      {{/if}}
      <label for="firstName" class="sr-only">First name</label>
      <input type="text" id="firstName" name="firstName" class="form-control mb-3" placeholder="First name"  autofocus="" value="{{values.firstName}}">
      
      {{#if errorMessages.lastName}}
        <span class="error">{{errorMessages.lastName}}</span>
      {{/if}}
      <label for="lasttName" class="sr-only">First name</label>
      <input type="text" id="lastName" name="lastName" class="form-control mb-3" placeholder="Last name"  autofocus="" value="{{values.lastName}}">

      {{#if errorMessages.inputEmail}}
        <span class="error">{{errorMessages.inputEmail}}</span>
      {{/if}}
      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="text" id="inputEmail" name="inputEmail" class="form-control mb-3" placeholder="Email address" autofocus="" value="{{values.inputEmail}}">
      

      {{#if errorMessages.inputPassword}}
        <span class="error">{{errorMessages.inputPassword}}</span>
      {{/if}}
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" id="inputPassword" name="inputPassword" class="form-control mb-3" placeholder="Password" value="{{values.inputPassword}}">
      
      <button class="btn btn-lg btn-primary btn-block" type="submit" style="background-color: #00008b;">Sign up today!</button>
